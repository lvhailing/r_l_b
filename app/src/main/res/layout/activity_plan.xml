<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">
    <com.rulaibao.uitls.DropDownMenu
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ddmenuTextSize="16sp"
        app:ddtextUnselectedColor="@color/gray_dark"
        app:ddtextSelectedColor="@color/gray_dark"
        app:dddividerColor="@color/gray_light"
        app:ddunderlineColor="@color/gray_light"
        app:ddmenuMenuHeightPercent="0.5"
        app:ddmenuSelectedIcon="@mipmap/ic_drop_down_selected"
        app:ddmaskColor="#88888888"
        app:ddmenuBackgroundColor="@color/white"
        android:layout_marginTop="10dp"
        app:ddmenuUnselectedIcon="@mipmap/ic_drop_down_unselected"/>
    <ViewSwitcher
        android:id="@+id/vs"
        android:layout_below="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light"
        android:orientation="vertical">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/listview_plan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_light"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrMode="both"/>

        <include layout="@layout/ac_empty_view"/>
    </ViewSwitcher>
</RelativeLayout>
