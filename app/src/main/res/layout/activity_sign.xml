<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/login_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@color/gray_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip">

            <TextView
                android:id="@+id/tv_sign_phone"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="手机号"/>

            <EditText
                android:id="@+id/et_sign_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_sign_phone"
                android:background="@color/transparent"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textColorHint="@color/gray_d"
                android:textColor="@color/gray_dark"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="16sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:src="@color/gray_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip">


            <TextView
                android:id="@+id/tv_sign_verify_code"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="验证码"/>

            <EditText
                android:id="@+id/et_sign_verify_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/iv_verify_code"
                android:layout_toRightOf="@id/tv_sign_verify_code"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:maxLength="20"
                android:inputType="number"
                android:textColorHint="@color/gray_d"
                android:textColor="@color/gray_dark"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_verify_code"
                android:layout_toLeftOf="@+id/tv_sign_get_verify_code"
                android:layout_width="2dp"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:src="@color/gray_light"/>
            <TextView
                android:id="@+id/tv_sign_get_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_color_yellow"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:src="@color/gray_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip">


            <TextView
                android:id="@+id/tv_sign_password"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="密码"/>

            <EditText
                android:id="@+id/et_sign_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/iv_hide_password"
                android:layout_toRightOf="@id/tv_sign_password"
                android:background="@color/white"
                android:hint="(6-16位数字和字母组合)"
                android:maxLength="20"
                android:inputType="text"
                android:textColorHint="@color/gray_d"
                android:textColor="@color/gray_dark"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_hide_password"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_open_password"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:src="@color/gray_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip">

            <TextView
                android:id="@+id/tv_sign_real_name"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="真实姓名"/>

            <EditText
                android:id="@+id/et_sign_real_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_sign_real_name"
                android:background="@color/transparent"
                android:hint="请输入姓名"
                android:inputType="text"
                android:maxLength="11"
                android:textColorHint="@color/gray_d"
                android:textColor="@color/gray_dark"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="16sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:src="@color/gray_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip">

            <TextView
                android:id="@+id/tv_sign_recommendation"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="推荐码"/>

            <EditText
                android:id="@+id/et_sign_recommendation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_sign_recommendation"
                android:background="@color/transparent"
                android:hint="请输入推荐码"
                android:inputType="phone"
                android:maxLength="11"
                android:textColorHint="@color/gray_d"
                android:textColor="@color/gray_dark"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="16sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:src="@color/gray_light"/>
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip">

            <CheckBox
                android:id="@+id/signup_checkbox"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/checkbox_signup"
                android:checked="true"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:text="@string/sign_agree"
                android:textSize="14.0sp"
                android:textColor="@color/gray_d" />

            <TextView
                android:id="@+id/signup_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/sign_web"
                android:textColor="@color/main_color_yellow"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/signup_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/sign_agree_two"
                android:textSize="14.0sp"
                android:textColor="@color/gray_d" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_sign"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:layout_marginTop="20dip"
            android:text="@string/sign_btn_name"
            android:background="@drawable/shape_gradient_orange"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:textColor="@color/txt_white"
            android:textSize="15sp"/>
    </LinearLayout>

</RelativeLayout>
