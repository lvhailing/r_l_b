<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray_new"
        android:orientation="vertical">

        <!-- 驳回原因   -->
        <RelativeLayout
            android:id="@+id/rl_audit_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red3"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_delete"/>

            <TextView
                android:id="@+id/tv_turn_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_delete"
                android:text=""
                android:textColor="@color/txt_black1"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_insurance_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow"/>

            <TextView
                android:id="@+id/tv_insurance_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_arrow"
                android:text=""
                android:textColor="@color/txt_black1"
                android:textSize="16sp"/>

            <View
                style="@style/v_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <!-- 详情明细 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/policy_status"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_policy_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_underwriting_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/underwriting_time"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_underwriting_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/product_name"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_policy_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/policy_number"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_policy_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/customer_name"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/id_number"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_id_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/insurance_period"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_insurance_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/payment_period"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_payment_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/renewal_date2"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_renewal_date2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/have_insurance_premiums"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_have_insurance_premiums"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/promotion_fee"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_promotion_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingLeft="15dp"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/record_date"
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_record_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text=""
                    android:textColor="@color/txt_black2"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 相关凭证 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/related_vouchers"
                android:textColor="@color/txt_black1"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_id_card_positive"
                    android:layout_width="165dp"
                    android:layout_height="102dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wu_normal"/>

                <TextView
                    android:id="@+id/tv_id_number_front"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_id_card_positive"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="身份证正面"
                    android:textColor="@color/txt_black2"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_id_card_negative"
                    android:layout_width="165dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@id/iv_id_card_positive"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wu_normal"/>

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_id_card_negative"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_id_number_front"
                    android:gravity="center_horizontal"
                    android:text="身份证反面"
                    android:textColor="@color/txt_black2"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/iv_bank_card"
                    android:layout_width="165dp"
                    android:layout_height="102dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wu_normal"/>

                <TextView
                    android:id="@+id/tv_bank_card"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_bank_card"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="银行卡"
                    android:textColor="@color/txt_black2"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_toRightOf="@id/iv_bank_card"
                    android:id="@+id/iv_other_card_first"
                    android:layout_width="165dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="11dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wu_normal"/>

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_other_card_first"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_bank_card"
                    android:gravity="center_horizontal"
                    android:text="其他"
                    android:textColor="@color/txt_black2"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/iv_other_card_second"
                    android:layout_width="165dp"
                    android:layout_height="102dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wu_normal"/>

                <TextView
                    android:id="@+id/tv_"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_other_card_second"
                    android:layout_marginTop="10dp"
                   android:paddingBottom="28dp"
                    android:gravity="center_horizontal"
                    android:text="其他"
                    android:textColor="@color/txt_black2"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="165dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="11dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- 备注 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/remarks"
                android:textColor="@color/txt_black1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_remarks_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="6dp"
                android:text="时间真像是一个不可理喻的疯子，坐在光线暗淡的角落里将我们一页页已经发生的往事撕碎，然后将碎片随地乱抛，让记忆的旋风卷进大脑的垃圾场里。我们好像已经习惯了时间的疯癫与残酷，在日升日落里忙碌旋转，在四季轮回中生老病死。"
                android:textColor="@color/txt_black2"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>