<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rulaibao.activity.MainActivity"
    android:orientation="vertical"
    android:background="@color/gray_light"
    >
    <TextView
        android:id="@+id/tv_answer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="---"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="16sp"
        android:textColor="@color/txt_black1"

        />

    <EditText
        android:id="@+id/et_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_answer_title"
        android:layout_marginTop="15dip"
        android:minLines="8"
        android:gravity="start"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:background="@color/white"
        android:hint="@string/training_toanswer"
        android:textColorHint="@color/txt_mark_gray"
        android:textSize="14sp"
        android:maxLength="1000"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_below="@id/et_answer_content"

        >
        <Button
            android:id="@+id/btn_training_answer"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/shape_ellipse_orange_btn"
            android:text="@string/training_commit"
            android:textColor="@color/bg_white"
            android:textSize="16sp"
            android:layout_marginBottom="10dip"
            />


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
