<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rulaibao.activity.MainActivity"
    android:background="@color/gray_light"
    android:fillViewport="true"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_light"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/training_mycircle"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="15dip"
                android:layout_marginBottom="10dip"
                />
            <com.rulaibao.widget.MyListView
                android:id="@+id/lv_mycircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray_light"
                android:dividerHeight="0.5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"

                >

            </com.rulaibao.widget.MyListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/training_mycircle_join"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="15dip"
                android:layout_marginBottom="10dip"
                />
            <com.rulaibao.widget.MyListView
                android:id="@+id/lv_mycircle_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray_light"
                android:dividerHeight="0.5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"

                >

            </com.rulaibao.widget.MyListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/training_recommend_circle"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="15dip"
                android:layout_marginBottom="10dip"

                />
            <com.rulaibao.widget.MyListView
                android:id="@+id/lv_recommend_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/gray_light"
                android:dividerHeight="0.5dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"

                >
            </com.rulaibao.widget.MyListView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
